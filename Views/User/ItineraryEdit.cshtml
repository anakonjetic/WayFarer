@model WayFarer.Model.Itinerary

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Itinerary</title>
    <link rel="stylesheet" href="~/css/itineraryStyle.css">
</head>
<body>
    <div class="edit-itinerary-container">
        <h2>Edit Itinerary</h2>

        <form method="post">
            <div class="form-group">
                <label for="City">City</label>
                <input type="text" id="City" value="@Model.City.Name" disabled class="form-control" />
            </div>

            <div class="form-group">
                <label for="StartDate">Start Date</label>
                <input type="date" id="StartDate" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>

            <div class="form-group">
                <label for="EndDate">End Date</label>
                <input type="date" id="EndDate" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>

            <div class="form-group">
                <label for="TotalPrice">Total Price</label>
                <input type="number" id="TotalPrice" name="TotalPrice" value="@Model.TotalPrice" class="form-control" />
            </div>

            <div class="form-actions">
                <button type="button" class="btn cancel-btn" onclick="window.history.back();">Cancel</button>
                <button type="submit" class="btn save-btn">Save Changes</button>
            </div>
        </form>
    </div>
</body>
</html>
