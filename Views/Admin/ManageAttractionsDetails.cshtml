@model WayFarer.Model.Attraction


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Attractions</title>
    <link rel="stylesheet" href="~/css/manageAttractionsStyle.css">
</head>
<section id="details-attraction">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ManageAttractions", "Admin")">Attractions</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <h2>@Model.Name</h2>

    <div class="attraction-details">
        <p><strong>Category:</strong> @Model.Category</p>
        <p><strong>City:</strong> @Model.City?.Name</p>
        <p><strong>Price:</strong> @Model.Price</p>

        <div id="imagePreviewContainer">
            <img id="imagePreview" src="@Model.Image" alt="Image Preview" style="width: 100%; height: auto;" />
        </div>
        
        <button onclick="window.location.href='@Url.Action("ManageAttractionsEdit", "Admin", new { id = Model.Id })'">Edit</button>
    </div>
</section>

<style>
    #imagePreviewContainer {
        margin-top: 15px;
    }
</style>
