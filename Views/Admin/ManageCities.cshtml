@using WayFarer.Model
@model IEnumerable<City>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Manage Cities</title>
    <link rel="stylesheet" href="~/css/manageCitiesStyle.css">
</head>
<body>

        <div class="actions-header">
          <h2>MANAGE CITIES</h2>
         <a asp-controller="Admin" asp-action="ManageCitiesAdd" style="text-decoration:none"> <button class="add-city-btn">ADD NEW CITY</button></a>
        </div>

        <div class="city-list">
            @foreach (var city in @Model)
            {
                <div class="city-card">
                    <div class="city-image-container">
                        <img src="@city.Image" alt="@city.Name">
                    </div>
                    <div class="city-info">
                        <h3>@city.Name</h3>
                        <p>@city.Description</p>
                    </div>
                    <div class="city-actions">
                       <button onclick="window.location.href='@Url.Action("ManageCitiesEdit", "Admin", new { id = city.Id })'">EDIT</button>
                        <form asp-action="ManageCitiesDelete" asp-controller="Admin" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@city.Id" />
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this city?');">DELETE</button>
                        </form>
                    </div>
                </div>
            }
        </div>

</body>
</html>